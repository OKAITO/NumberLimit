<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/setting_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可指定数字范围为1到1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/writenum_scope"
        android:textColor="#707070"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Blank"
            />
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text=""
            android:background="@drawable/writenumber_sub"
            android:gravity="center"
            android:id="@+id/writenum_sub"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="40sp"
            android:id="@+id/writenum_num"
            />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text=""
            android:background="@drawable/writenumber_plus"
            android:gravity="center"
            android:id="@+id/writenum_add"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Blank"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:text=""
            android:background="@drawable/writenumber_sure"
            android:layout_marginLeft="50dp"
            android:id="@+id/writenum_ok"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/Blank"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_marginRight="50dp"
                android:text=""
                android:background="@drawable/writenumber_cancel"
                android:id="@+id/writenum_cancel"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
